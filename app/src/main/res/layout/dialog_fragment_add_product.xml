<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical">

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#2196f3"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text="Thêm mặt hàng"/>

                <ImageButton
                    android:id="@+id/btn_fragment_add_product_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_clear_white"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#29b6f6"
                    android:textSize="18sp"
                    android:typeface="serif"
                    android:layout_marginBottom="5dp"
                    android:text="Mã sản phẩm"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColorHint="#b39ddb"
                    android:textColor="#000"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_textbox"
                    android:hint="Nhập mã sản phẩm "/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#29b6f6"
                    android:textSize="18sp"
                    android:typeface="serif"
                    android:layout_marginBottom="5dp"
                    android:text="Nhân viên thêm"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColorHint="#b39ddb"
                    android:textColor="#000"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_textbox"
                    android:hint="Tên nhân viên thêm"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#29b6f6"
                    android:textSize="18sp"
                    android:typeface="serif"
                    android:layout_marginBottom="5dp"
                    android:text="Ngày tạo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#000"
                    android:text="22/12/2018"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_textbox" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#29b6f6"
                    android:textSize="18sp"
                    android:typeface="serif"
                    android:layout_marginBottom="5dp"
                    android:text="Tên sản phẩm"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColorHint="#b39ddb"
                    android:textColor="#000"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_textbox"
                    android:hint="Nhập tên sản phẩm "/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#29b6f6"
                    android:textSize="18sp"
                    android:typeface="serif"
                    android:layout_marginBottom="5dp"
                    android:text="Số lượng hàng"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColorHint="#b39ddb"
                    android:textColor="#000"
                    android:layout_marginBottom="15dp"
                    android:inputType="number"
                    android:background="@drawable/background_textbox"
                    android:hint="Nhập số lượng hàng "/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#29b6f6"
                    android:textSize="18sp"
                    android:typeface="serif"
                    android:layout_marginBottom="5dp"
                    android:text="Chủng loại"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColorHint="#b39ddb"
                    android:textColor="#000"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_textbox"
                    android:hint="Nhập chủng loại "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#29b6f6"
                    android:textSize="18sp"
                    android:typeface="serif"
                    android:layout_marginBottom="5dp"
                    android:text="Hình ảnh sản phẩm 1"/>

                <ImageView
                    android:id="@+id/imv_fragment_add_product_photo1"
                    android:layout_width="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/photo_null_require_select_photo"
                    android:layout_marginBottom="20dp"
                    android:layout_height="250dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <Button

                        android:id="@+id/btnChonAnhDialog1"
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:background="@drawable/background_button_share"
                        android:paddingRight="5dp"
                        android:drawableLeft="@drawable/icon_photo_white"
                        android:text="Chọn ảnh"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btn_fragment_add_product_camera1"
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/background_button_share"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_camera_white"
                        android:text="Chụp ảnh"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#29b6f6"
                    android:textSize="18sp"
                    android:typeface="serif"
                    android:layout_marginBottom="5dp"
                    android:text="Hình ảnh sản phẩm 2"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/photo_null_require_select_photo"
                    android:layout_marginBottom="20dp"
                    android:layout_height="250dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <Button

                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:background="@drawable/background_button_share"
                        android:paddingRight="5dp"
                        android:drawableLeft="@drawable/icon_photo_white"
                        android:text="Chọn ảnh"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <Button
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/background_button_share"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_camera_white"
                        android:text="Chụp ảnh"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                </LinearLayout>




            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@drawable/state_button_add"
            android:text="Thêm"/>

    </LinearLayout>

</RelativeLayout>