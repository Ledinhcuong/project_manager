<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorItemBackgroundLight"
    app:cardMaxElevation="1dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/preview"/>

            <TextView
                android:id="@+id/tv_list_item_area_id"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#ff5722"
                android:layout_height="wrap_content"
                android:text="Mã khu vực"/>

            <TextView
                android:id="@+id/tv_list_item_area_name"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="Tên khu vực"/>

            <ImageButton
                android:id="@+id/btn_list_item_area_show_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_keyboard_arrow"/>

        </LinearLayout>


</android.support.v7.widget.CardView>